{
  "$schema": "https://raw.githubusercontent.com/infection/infection/0.26.6/resources/schema.json",
  "source": {
    "directories": [
      "src"
    ],
    "excludes": [
      "src/Concerns"
    ]
  },
  "logs": {
    "stryker": {
      "report": "main"
    }
  },
  "mutators": {
    "@default": true,
    "global-ignore": [
      "Smpl\\Inspector\\Inspector::__construct",
      "Smpl\\Inspector\\Factories\\StructureFactory::makeInheritedMethods",
      "Smpl\\Inspector\\Factories\\StructureFactory::makeInheritedProperties"
    ]
  }
}