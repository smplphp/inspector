{
  "name": "smplphp/inspect",
  "description": "A simple modern PHP class inspector and mapper library",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Ollie Read",
      "email": "smpl@ollie.codes"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "sempro/phpunit-pretty-print": "^1.4",
    "vimeo/psalm": "^4.21",
    "phpstan/phpstan": "^1.4"
  },
  "autoload": {
    "psr-4": {
      "Smpl\\Inspector\\": "src/"
    },
    "files": [
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Smpl\\Inspector\\Tests\\": "tests/"
    },
    "files": [
    ]
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --verbose --colors=always",
    "test-coverage": "XDEBUG_MODE=coverage phpunit --verbose --colors=always --coverage-html build/coverage",
    "psalm": "./vendor/bin/psalm --no-cache",
    "phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon",
    "ci": [
      "@test-coverage",
      "@psalm",
      "@phpstan"
    ]
  }
}